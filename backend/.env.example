# Telegram API Configuration
# Get these credentials from https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Your phone number in international format (with country code)
PHONE=+1234567890

# Database Configuration
DATABASE_PATH=./data/contacts.db

# Media Storage Configuration
MEDIA_PATH=./data/media
PROFILE_PHOTOS_PATH=./data/media/profile-photos
GROUP_PHOTOS_PATH=./data/media/group-photos

# Session Configuration
SESSION_NAME=telegram_session
SESSION_PATH=./data/sessions

# API Configuration
# The host and port for the FastAPI server
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
# Allowed origins for CORS (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
# Delay between API calls to respect Telegram rate limits (in seconds)
RATE_LIMIT_DELAY=1.0

# Maximum number of retries for failed API calls
MAX_RETRIES=3

# Sync Configuration
# Interval for automatic sync in minutes (0 to disable)
SYNC_INTERVAL_MINUTES=60

# Logging Configuration
LOG_LEVEL=INFO
